package exercicio_for;

import java.util.Scanner;

public class for_exercise {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int x;
		
		System.out.println("Digite um número no intervalo de 1 a 1000 ");
		x = sc.nextInt();
		
		System.out.println("Dentro do intervalo de 1 a "+x+":");
		
		for (int i = 1; i <= x; i++) {
			if (i % 2 != 0 ) {
				System.out.println("O número ["+i+"] é ímpar");
			}

		}

	}

}
